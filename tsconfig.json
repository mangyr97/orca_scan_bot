{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "incremental": true,
      "skipLibCheck": true,
      "lib": [
        "es2017",
        "webworker"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "reports",
      "jest.config.js",
    ]
  }